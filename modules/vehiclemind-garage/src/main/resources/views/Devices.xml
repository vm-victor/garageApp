<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="devices-grid" title="Devices" model="com.vehiclemind.garage.db.Devices">
    <field name="uuid" />
    <field name="customer" />
  </grid>

  <form name="devices-form" title="Tax" model="com.vehiclemind.garage.db.Devices" width="mini">
    <panel title="Overview" itemSpan="12">
        <field name="uuid"  onChange="com.vehiclemind.garage.web.controllers.DeviceController:onUpdateUuid"/>
        <field name="customer" />
    </panel>  
  </form>

</object-views>
